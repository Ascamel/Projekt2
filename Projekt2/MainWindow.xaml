<Window x:Class="Projekt2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF015F6B">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button x:Name="LoadButton" Grid.Column="0" Margin="20,100" Click="LoadButton_Click">Load</Button>

        <Image x:Name="MyImage" Grid.Column="1" Width="300" Height="200" MouseLeftButtonDown="ZoomInButtonClick" MouseRightButtonDown="ZoomOutButtonClick" RenderOptions.BitmapScalingMode="NearestNeighbor">
            <Image.RenderTransform>
                <ScaleTransform/>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>
